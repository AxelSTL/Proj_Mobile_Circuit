<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:weightSum="100">

        <ImageView
            android:id="@+id/image_adapter"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_weight="50" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">

        <TextView
            android:id="@+id/nom_adapter_circuit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/description_adapter_circuit"
            android:gravity="center"
            android:text="nom" />

        <TextView
            android:id="@+id/description_adapter_circuit"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_below="@+id/adresse_adapter_circuit"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:text="desc" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <TextView
                android:id="@+id/adresse_adapter_circuit"
                android:layout_width="137dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="adresse" />

           <!-- <TextView
                android:id="@+id/prix_adapter_circuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prix" /> -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>