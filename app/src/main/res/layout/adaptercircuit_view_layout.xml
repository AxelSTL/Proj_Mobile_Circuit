<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <ImageView
        android:id="@+id/image_adapter"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_weight="50"
        android:contentDescription="@string/description_image1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/nom_adapter_circuit"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="bottom|center|start"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="@string/nomAnnonce" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codepostal_adapter_circuit"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:text="@string/codePostal"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/ville_adapter_circuit"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center_vertical|start"
                android:text="@string/ville"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
             android:id="@+id/prix_adapter_circuit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center|top"
             android:gravity="center|start"
             android:text="@string/prix"
             android:textColor="@color/black"
             android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>