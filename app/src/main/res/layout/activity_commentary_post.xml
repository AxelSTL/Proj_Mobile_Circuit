<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentaryPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/circuitname_postCommentary"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/stars1_PostCommentary"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="76dp"
                android:background="@drawable/ic_baseline_star_rate_24" />

            <ImageView
                android:id="@+id/stars2_PostCommentary"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/ic_baseline_star_rate_24" />

            <ImageView
                android:id="@+id/stars3_PostCommentary"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/ic_baseline_star_rate_24" />

            <ImageView
                android:id="@+id/stars4_PostCommentary"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/ic_baseline_star_rate_24" />

            <ImageView
                android:id="@+id/stars5_PostCommentary"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/ic_baseline_star_rate_24" />

        </LinearLayout>

        <EditText
            android:id="@+id/avis_PostCommentary"
            android:layout_width="381dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginTop="60dp"
            android:background="@drawable/border_black"
            android:hint="Votre avis..."
            android:maxLength="120"
            android:paddingTop="12dp"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/blackHint"
            android:textSize="20sp"
            tools:ignore="SmallSp"></EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/validate_postcommentary"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Valider votre avis"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/arround_button_black2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>