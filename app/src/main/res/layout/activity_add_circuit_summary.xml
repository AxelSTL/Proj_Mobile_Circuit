<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addcircuit.AddCircuitSummaryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="136dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryName_view" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="112dp"
            android:layout_height="104dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/image4"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="112dp"
            android:layout_height="104dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="259dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="112dp"
            android:layout_height="104dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/image3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryName_view" />

        <TextView
            android:id="@+id/summaryName_view"
            android:layout_width="156dp"
            android:layout_height="64dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/summaryDesc_view"
            android:layout_width="245dp"
            android:layout_height="89dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toStartOf="@+id/summaryPrice_view"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <TextView
            android:id="@+id/summaryPrice_view"
            android:layout_width="104dp"
            android:layout_height="89dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image4" />

        <TextView
            android:id="@+id/summaryAddress_view"
            android:layout_width="376dp"
            android:layout_height="24dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryDesc_view" />

        <TextView
            android:id="@+id/summaryCity_view"
            android:layout_width="243dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryAddress_view" />

        <TextView
            android:id="@+id/summaryPostalCode_view"
            android:layout_width="111dp"
            android:layout_height="20dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/summaryCity_view"
            app:layout_constraintTop_toBottomOf="@+id/summaryAddress_view" />


        <Button
            android:id="@+id/summaryValidate_btn"
            android:layout_width="189dp"
            android:layout_height="50dp"
            android:layout_marginStart="111dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="20dp"
            android:text="Poster l'annonce"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryCity_view"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>