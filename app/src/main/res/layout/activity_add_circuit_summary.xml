<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.addcircuit.AddCircuitSummaryActivity">

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/summaryName_view"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/grey"
                android:layout_marginTop="70dp"
                android:background="@drawable/arround_corners_indigo"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="112dp"
                    android:layout_height="104dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="112dp"
                    android:layout_height="104dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="112dp"
                    android:layout_height="104dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/summaryDesc_view"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/arround_corners_cyan"/>

            <TextView
                android:id="@+id/summaryAddress_view"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/arround_corners_cyan"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="10dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

                <TextView
                    android:id="@+id/summaryCity_view"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/arround_corners_cyan"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

                <TextView
                    android:id="@+id/summaryPostalCode_view"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/arround_corners_cyan"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

            </LinearLayout>

            <TextView
                android:id="@+id/summaryPrice_view"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/arround_corners_cyan"/>

            <Button
                android:id="@+id/summaryValidate_btn"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Poster l'annonce"
                android:background="@drawable/arround_button_indigo"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>