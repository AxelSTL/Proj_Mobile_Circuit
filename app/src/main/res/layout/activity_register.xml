<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegisterActivity">

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_register_txtview"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:text="Formulaire d'inscription"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/arround_corners_indigo"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Informations du compte"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nom_register_txtEdit"
                    android:layout_width="185dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Nom"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey">

                </EditText>

                <EditText
                    android:id="@+id/prenom_register_txtEdit"
                    android:layout_width="185dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Prénom"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pseudo_register_txtEdit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/arround_corners_cyan"
                        android:hint="Pseudo"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey" />

                    <EditText
                        android:id="@+id/mdp_register_txtEdit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/arround_corners_cyan"
                        android:hint="Mot de passe"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_user"
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_add_image_foreground" />


            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Informations personelles"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mail_register_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/arround_corners_cyan"
                android:hint="Mail"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey">

            </EditText>

            <EditText
                android:id="@+id/tel_register_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/arround_corners_cyan"
                android:hint="Téléphone"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey">

            </EditText>

            <EditText
                android:id="@+id/adresse_register_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/arround_corners_cyan"
                android:hint="Adresse"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/ville_register_txtEdit"
                    android:layout_width="185dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Ville"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey">

                </EditText>

                <EditText
                    android:id="@+id/codepostal_register_txtEdit"
                    android:layout_width="185dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Code postal"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey">

                </EditText>

            </LinearLayout>

            <ImageButton
                android:id="@+id/validate_register_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="S'inscrire"
                android:contentDescription="S'inscrire"
                android:background="@drawable/arround_button_indigo"
                app:srcCompat="@drawable/ic_register"/>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>