<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.addcircuit.AddNameActivity">

        <include layout="@layout/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="10dp"
            android:layout_margin="8dp"
            tools:ignore="SmallSp">

            <TextView
                android:id="@+id/addcircuitName_view"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/arround_corners_indigo"
                android:text="Veuillez configurer votre annonce"
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:textSize="19sp"/>

            <EditText
                android:id="@+id/addcircuitName_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/arround_corners_cyan"
                android:hint="@string/nomcircuit"
                android:maxLength="30"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/blackHint"
                android:textSize="20sp"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/addcircuitDesc_input"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arround_corners_cyan"
                android:gravity="top"
                android:hint="Description..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textColorHint="@color/blackHint"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/addcircuitAddress_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arround_corners_cyan"
                android:hint="Adresse"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackHint"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!--                android:autofillHints="postalAddress"-->

                <EditText
                    android:id="@+id/addcircuitPostal_input"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Code postal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blackHint"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/addcircuitCity_input"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/arround_corners_cyan"
                    android:hint="Ville"
                    android:maxLines="2"
                    android:paddingStart="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blackHint"
                    android:textSize="20sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/addcircuitPrice_input"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/arround_corners_cyan"
                android:gravity="center"
                android:hint="Prix "
                android:inputType="number"
                android:maxLength="8"
                android:minHeight="48dp"
                android:paddingStart="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/blackHint"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/addcircuitTitleDesc_btn"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="Bouton sauvegarder"
                android:background="@drawable/arround_button_black"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/ic_save"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>