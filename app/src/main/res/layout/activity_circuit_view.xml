<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/scrollview_circuitview"
    tools:context=".CircuitViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circuitviewImg_imageview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="73dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/circuitviewName_view"
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Circuit de test"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/fav_imageView_circuitView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_unfav"></ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/circuitviewPseudoonwer_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="30dp"
                android:text="publiÃ© par mbosc"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_bottom">

            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Description"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/circuitviewDescrption_view"
                android:layout_width="350dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/circuitviewAdresse_view"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/circuitviewPostal_view"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/circuitviewPrice_view"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <!--                <Space-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_height="4dp"-->
                <!--                    android:layout_weight="1">-->
                <!--                </Space>-->


            </LinearLayout>

            <TextView
                android:id="@+id/circuitviewCity_view"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/circuitviewValidate_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/arround_button_black2"
                android:text="@string/boutonReserver"
                android:textAlignment="center"
                android:textColor="@color/white" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="412dp"
            android:layout_height="340dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/stars1_circuitView"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_star_vide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <ImageView
                android:id="@+id/stars2_circuitView"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/ic_star_vide"
                app:layout_constraintStart_toEndOf="@+id/stars1_circuitView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stars4_circuitView"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_star_vide"
                app:layout_constraintStart_toEndOf="@+id/stars3_circuitView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stars5_circuitView"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_star_vide"
                app:layout_constraintStart_toEndOf="@+id/stars4_circuitView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stars3_circuitView"
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_star_vide"
                app:layout_constraintStart_toEndOf="@+id/stars2_circuitView"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/listView_commentary_moncompte"
                android:layout_width="410dp"
                android:layout_height="252dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/post_avis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="39dp"
                android:text="Ajouter un avis"
                app:layout_constraintBottom_toTopOf="@+id/listView_commentary_moncompte"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>