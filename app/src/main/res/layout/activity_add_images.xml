<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.addcircuit.AddImagesActivity">

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/addCircuit_name_image_textview"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/grey"
                android:layout_marginTop="70dp"
                android:background="@drawable/arround_corners_indigo">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="182dp"
                    android:layout_height="182dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arround_button_red"
                    app:srcCompat="@drawable/ic_add_image_foreground"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1">
                </Space>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="182dp"
                    android:layout_height="182dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arround_button_red"
                    app:srcCompat="@drawable/ic_add_image_foreground"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                >


                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="182dp"
                    android:layout_height="182dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arround_button_red"
                    app:srcCompat="@drawable/ic_add_image_foreground"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1">
                </Space>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="182dp"
                    android:layout_height="182dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arround_button_red"
                    app:srcCompat="@drawable/ic_add_image_foreground"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/addcircuitImages_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="Bouton sauvegarder"
                android:background="@drawable/arround_button_indigo"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_save" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>